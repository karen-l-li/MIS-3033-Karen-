<Window x:Class="JSON_GOTQuote.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JSON_GOTQuote"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/GOT.jpg"/>
        </Grid.Background>
        <TextBlock x:Name="txtBlockQuote" HorizontalAlignment="Center" Margin="0,201,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="179" Width="328" Background="White" FontWeight="Bold" FontSize="15" Opacity="0.8"><Run/><LineBreak/><Run/></TextBlock>
        <Button x:Name="btnGetQuote" Content="Get Quote" HorizontalAlignment="Center" Margin="0,95,0,0" VerticalAlignment="Top" Height="49" Width="144" BorderBrush="#FF3E3E3E" Background="#FFD6F4FF" Click="btnGetQuote_Click"/>

    </Grid>
</Window>
